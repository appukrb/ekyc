<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/dim_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_corner_layout_from_all_sides"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edittext_edit_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Date Of Birth"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:id="@+id/edittext_edit_emailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email ID"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:id="@+id/edittext_edit_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your mPIN"
                android:padding="5dp"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:layout_margin="10dp"
                android:textSize="@dimen/normal_text_size" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_size"
                android:gravity="center"
                android:weightSum="2"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button_pop_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:padding="@dimen/btn_padding_size"
                    android:background="@drawable/rounded_corner"
                    android:textSize="@dimen/normal_text_size"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/button_pop_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="@dimen/btn_padding_size"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/rounded_corner"
                    android:layout_weight="1"
                    android:text="Update" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>