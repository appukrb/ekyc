<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainlinear">

    <LinearLayout
        android:id="@+id/linheader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/merchentheader" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/linView1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_rounded_corner"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/offer1"
                        android:layout_width="@dimen/offers_image_width"
                        android:layout_height="@dimen/offers_image_height"
                        android:layout_gravity="center"
                        android:src="@drawable/dummy" />

                    <TextView
                        android:id="@+id/txtOffers1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" Account Details "
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size_for_offer" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/textview_rounded_corner"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/offer2"
                        android:layout_width="@dimen/offers_image_width"
                        android:layout_height="@dimen/offers_image_height"
                        android:layout_gravity="center"
                        android:src="@drawable/money_transfer" />

                    <TextView
                        android:id="@+id/txtOffers2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Mini Statement"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size_for_offer" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/linView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_rounded_corner"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/offer3"
                        android:layout_width="@dimen/offers_image_width"
                        android:layout_height="@dimen/offers_image_height"
                        android:layout_gravity="center"
                        android:src="@drawable/recharge" />

                    <TextView
                        android:id="@+id/txtOffers3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Detailed Statement"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size_for_offer" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/textview_rounded_corner"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/offer4"
                        android:layout_width="@dimen/offers_image_width"
                        android:layout_height="@dimen/offers_image_height"
                        android:layout_gravity="center"
                        android:src="@drawable/lock" />

                    <TextView
                        android:id="@+id/txtOffers4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Change mPIN"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size_for_offer" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/linView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_rounded_corner"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/offer5"
                        android:layout_width="@dimen/offers_image_width"
                        android:layout_height="@dimen/offers_image_height"
                        android:layout_gravity="center"
                        android:src="@drawable/contact_m" />

                    <TextView
                        android:id="@+id/txtOffers5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Contact Us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size_for_offer" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/textview_rounded_corner"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/offer6"
                        android:layout_width="@dimen/offers_image_width"
                        android:layout_height="@dimen/offers_image_height"
                        android:layout_gravity="center"
                        android:src="@drawable/merchantpayment" />

                    <TextView
                        android:id="@+id/txtOffers6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Pull Money"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size_for_offer" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/linView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_rounded_corner"
                    android:orientation="vertical"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/offer7"
                        android:layout_width="@dimen/offers_image_width"
                        android:layout_height="@dimen/offers_image_height"
                        android:layout_gravity="center"
                        android:src="@drawable/contact_m" />

                    <TextView
                        android:id="@+id/txtOffers7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Contact Us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size_for_offer" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linView8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/textview_rounded_corner"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/offer8"
                        android:layout_width="@dimen/offers_image_width"
                        android:layout_height="@dimen/offers_image_height"
                        android:layout_gravity="center"
                        android:src="@drawable/merchantpayment" />

                    <TextView
                        android:id="@+id/txtOffers8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Pull Money"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size_for_offer" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/black" />-->


        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_height" />
        <!--android:background="@drawable/addpic3" -->
    </LinearLayout>
</RelativeLayout>
