<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/listheader" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_size"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Sign Up"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/headding_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                 >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext"
                    android:layout_marginTop="@dimen/margin_top_size">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91"
                        android:textSize="@dimen/normal_text_size"
                        android:layout_marginTop="@dimen/btn_padding_size"
                        android:background="@null"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/black"
                        android:enabled="false"/>

                    <EditText
                        android:id="@+id/edtRegMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/btn_padding_size"
                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="#000000"
                        android:textSize="@dimen/normal_text_size"
                        android:background="@null"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_top_size">

                    <EditText
                        android:id="@+id/edtFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/btn_padding_size"
                        android:hint="Full Name"
                        android:inputType="textPersonName"
                        android:textColor="#000000"
                        android:textSize="@dimen/normal_text_size"
                        android:background="@drawable/edittext"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>
                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_top_size">

                    <EditText
                        android:id="@+id/edtDateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/btn_padding_size"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="Date Of Birth"
                        android:onClick="openDateofBirth"
                        android:textColor="#000000"
                        android:textSize="@dimen/normal_text_size"
                        android:background="@drawable/edittext"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_top_size">

                    <EditText
                        android:id="@+id/edtEmailID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/btn_padding_size"
                        android:hint="Email Id"
                        android:inputType="textEmailAddress"
                        android:textColor="#000000"
                        android:textSize="@dimen/normal_text_size"
                        android:background="@drawable/edittext"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_top_size">

                    <EditText
                        android:id="@+id/edtpromocode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/btn_padding_size"
                        android:hint="Enter Promo Code"
                        android:inputType="textPersonName"
                        android:textColor="#000000"
                        android:textSize="@dimen/normal_text_size"
                        android:background="@drawable/edittext"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/btn_padding_size"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.tcs.mmpl.customer.utility.RoundedImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dummy" />

                    <Button
                        android:id="@+id/txt_profile_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:gravity="left|center"
                        android:hint="Upload Profile Picture"
                        android:onClick="loadImagefromGallery"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checkbox_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_top_size"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chkAgree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="2"
                        android:text="I agree to Terms &amp; Conditions"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/btn_margin_top"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <Button
                        android:id="@+id/btnRegConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner"
                        android:padding="@dimen/btn_padding_size"
                        android:text="@string/button_confirm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text_size"

                        />

                    <Button
                        android:id="@+id/btnRegReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner"
                        android:padding="@dimen/btn_padding_size"
                        android:text="@string/button_reset"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text_size"

                        />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>