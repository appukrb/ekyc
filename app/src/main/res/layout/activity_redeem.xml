<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tcs.mmpl.customer.Activity.Redeem">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e7e3e1"
            android:orientation="vertical">

            <include layout="@layout/header" />
        </LinearLayout>

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_top_size"
                android:background="#ffffff">

                <ScrollView
                    android:id="@+id/scrollViewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/linearLayoutFooter"

                    android:layout_alignParentTop="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="8dp"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Avail Cash Back / Deals"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/headding_text_size" />





                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_top_size"
                                android:background="@drawable/edittext"
                                android:orientation="horizontal">




                                <EditText
                                    android:id="@+id/edtPromocode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:inputType="textPersonName"
                                    android:hint="Enter Promo Code"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textSize="@dimen/normal_text_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/button_linear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_top_size"
                                android:gravity="center">
                                >
                                <Button
                                    android:id="@+id/btnCashBack"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_corner"
                                    android:onClick="openOffers"
                                    android:padding="@dimen/btn_padding_size"
                                    android:text="@string/button_proceed"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_text_size"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <LinearLayout

                    android:id="@+id/linearLayoutFooter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#f0b26f" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/addpic3" />
                </LinearLayout>
            </RelativeLayout>

            <include layout="@layout/hamburger_layout"/>

        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>






</RelativeLayout>
