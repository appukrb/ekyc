<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/mainlinear"
    tools:context="com.tcs.mmpl.customer.Goibibo.Bus.GoibiboBusBoardingPointActivity">

    <LinearLayout
        android:id="@+id/linheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/listheader" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linheader"
        android:layout_width="match_parent"
        android:layout_above="@+id/imgFooter"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Boarding Point"
            android:textSize="@dimen/normal_text_size"
            android:background="#e0eefa"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <ListView
            android:id="@+id/listBoardingPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imgFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/footer"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
