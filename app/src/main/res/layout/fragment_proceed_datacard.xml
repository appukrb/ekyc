<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="#ffffff">

    <ScrollView
        android:id="@+id/scrollViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayoutFooter"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/header_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_proceed_datacard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kindly Confirm your recharge"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_for_title"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editText1_Linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_size"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@drawable/edittext"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/txt_datacard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile Number :"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/txtNumberDatacard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9223276183"
                    android:textColor="@android:color/black" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/editText3_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_size"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:background="@drawable/edittext"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/txt_amount_datacard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/txtAmountDatacard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200.00"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_size"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtMpinDatacard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="mPIN*"
                    android:textSize="@dimen/normal_text_size"
                    android:background="@drawable/edittext"
                    android:textColorHint="@android:color/black"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_top_size">

                <EditText
                    android:id="@+id/edtPromocode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Promo Code"

                    android:textSize="@dimen/normal_text_size"
                    android:background="@drawable/edittext"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColorHint="@android:color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/button_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/btn_margin_top"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
                    android:id="@+id/btnConfirmDatacard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner"
                    android:padding="@dimen/btn_padding_size"
                    android:text="@string/button_confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"

                    />

                <Button
                    android:id="@+id/btnResetDatacard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner"
                    android:padding="@dimen/btn_padding_size"
                    android:text="@string/button_reset"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"


                    />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- <LinearLayout

         android:id="@+id/linearLayoutFooter"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:gravity="bottom"
         android:layout_alignParentBottom="true"
         >
         <View
             android:layout_width="match_parent"
             android:layout_height="3dp"
             android:background="#f0b26f"
             />

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:layout_marginTop="2dp"
             android:background="@drawable/addpic3"
             />
     </LinearLayout>-->

</RelativeLayout>


