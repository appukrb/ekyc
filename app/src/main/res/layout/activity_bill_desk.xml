<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/listheader" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_size"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3"
            android:id="@+id/mainlinear">

                <Button
                    android:id="@+id/btnSavedcards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/btn_margin_top"
                    android:background="@drawable/rounded_corner"
                    android:padding="@dimen/btn_padding_size"
                    android:text="Saved cards"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_margin="20dp"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btncreditcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/btn_margin_top"
                    android:background="@drawable/rounded_corner"
                    android:padding="@dimen/btn_padding_size"
                    android:text="Credit Card"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_margin="20dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnDebitCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/btn_margin_top"
                    android:background="@drawable/rounded_corner"
                    android:padding="@dimen/btn_padding_size"
                    android:text="Debit Card"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_margin="20dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnnetbanking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/btn_margin_top"
                    android:background="@drawable/rounded_corner"
                    android:padding="@dimen/btn_padding_size"
                    android:text="Net Banking "
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_margin="20dp"
                    android:visibility="gone"/>

                <Button
                android:id="@+id/btnmmid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/btn_margin_top"
                android:background="@drawable/rounded_corner"
                android:padding="@dimen/btn_padding_size"
                android:text="MMID"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text_size"
                android:layout_margin="20dp"
                android:visibility="gone"/>



            </LinearLayout>

        <LinearLayout
            android:id="@+id/getMMID_linlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_size"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_getMMID"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/normal_text_size"
                android:text="Did you know you can top up your mRUPEE wallet without logging into APP?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:id="@+id/lin_getMMID_url">
                <TextView
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/for_moreinfo"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="italic"
                    android:textColor="@color/orange"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>
