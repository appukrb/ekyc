<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tcs.mmpl.customer.Activity.ViewTransactionActivity">

    <LinearLayout
        android:id="@+id/linParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linbeneficiary"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTransactionError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sorry! There is no transaction details available for your account"
                android:textColor="@color/black"

                android:textSize="@dimen/normal_text_size"
                android:visibility="gone" />

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linbeneficiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btn_margin_top"
        android:gravity="center">

        <Button
            android:id="@+id/btn_Add_Beneficiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corner"
            android:padding="@dimen/btn_padding_size"
            android:text="Add Beneficiary"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"


            />

    </LinearLayout>
</RelativeLayout>













