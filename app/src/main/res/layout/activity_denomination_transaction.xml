<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linParent"
    tools:context="com.tcs.mmpl.customer.Activity.DenominationTransactionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/listheader" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imgBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/backgroud_default_image" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value" />

                    <EditText
                        android:id="@+id/edtValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_traveller_border"
                         />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity" />

                    <EditText
                        android:id="@+id/edtQuantity"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:inputType="number"
                        android:background="@drawable/add_traveller_border"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:layout_marginTop="@dimen/margin_top_size"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/edtBeneficiaryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/margin_top_size"
                android:background="@drawable/edittext"
                android:hint="Beneficiary Name"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:id="@+id/edtBeneficiaryPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/margin_top_size"
                android:background="@drawable/edittext"
                android:hint="Beneficiary Phone Number"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="#000000"
                android:textSize="@dimen/normal_text_size" />


            <EditText
                android:id="@+id/edtBeneficiaryEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/margin_top_size"
                android:background="@drawable/edittext"
                android:hint="Beneficiary Email Id"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="@dimen/normal_text_size" />


            <EditText
                android:id="@+id/edtMpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/margin_top_size"
                android:background="@drawable/edittext"
                android:hint="mPIN"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="#000000"
                android:textSize="@dimen/normal_text_size" />


            <EditText
                android:id="@+id/edtBeneficiaryPersonalMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/margin_top_size"
                android:background="@drawable/edittext"
                android:hint="Personal Message"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/btnDenomination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_size"
                android:background="@drawable/rounded_corner"
                android:padding="@dimen/btn_padding_size"
                android:text="@string/button_proceed"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text_size" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
